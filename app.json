{
  "expo": {
    "name": "Ergon Work Management",
    "slug": "ergon-work-management",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo2.png",
    "userInterfaceStyle": "light",
    "scheme": "ergonwork",
    "splash": {
      "image": "./assets/logo2.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ergowork.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Πρόσβαση στην κάμερα για φωτογραφίες.",
        "NSPhotoLibraryUsageDescription": "Πρόσβαση στις φωτογραφίες."
      }
    },
    "android": {
      "package": "com.ergowork.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo2.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/logo2.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Επιτρέψτε την πρόσβαση στην κάμερα."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Επιτρέψτε την πρόσβαση στη συλλογή.",
          "savePhotosPermission": "Επιτρέψτε την αποθήκευση.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-router",
      "expo-font"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1565aada-06d6-48a4-b418-67e0255747fe"
      }
    }
  }
}
